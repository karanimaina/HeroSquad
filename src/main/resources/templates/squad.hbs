{{#partial "content"}}
{{#if editHero}}
     <h1>Edit this Hero!</h1>
     <form action="/heroes/{{editHero.id}}/update" method="post">
         <label for="age">Edit this Hero age </label>
         <input id="age " name="age" type="text" value="{{editHero.age}}">

   {{else}}
   <h1>Add a new Hero!</h1>

   <form action="/heroes/new" method="post">
         <label for="name">Hero name</label>
         <input id="name" name="name" type="text">
         <label for="age">Hero age </label>
         <input id="age" name="age" type="text">
         <label for="power">Hero power</label>
         <input id="power" name="power" type="text">
         <label for="weakness">Hero weakness</label>
         <input id="weakness" name="weakness" type="text">
         {{/if}}
         <button type="submit" class="btn btn-default">Add new Hero</button>
     </form>
{{/partial}}

 {{> layout.hbs}}