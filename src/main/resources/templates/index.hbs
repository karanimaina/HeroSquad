{{#partial "content"}}

   <h1> heroes List!</h1>

   {{#if heroes}} <!--if posts exist, then -->
       {{#each heroes }} <!--loop-->
        <p>Current Hero:</p>
        <p>name: {{ name }}</p> <!--show-->
        <p>age: {{ age}}</p>
        <p>power: {{ power}}</p>
        <p>weakness : {{ weakness}}</p>
       {{/each}}
   {{else}} <!--no posts!-->
    <p>No Hero!</p>
   {{/if}}

   <p>Add a new Hero:</p>

   <form action="/hero/new" method="post">
       <label for="name">Hero name</label>
       <input id="name" name="name" type="text">
       <label for="age">Hero age </label>
       <input id="age" name="age" type="text">
       <label for="power">Hero power</label>
       <input id="power" name="power" type="text">
       <label for="weakness">Hero weakness</label>
       <input id="weakness" name="weakness" type="text">
       <button type="submit" class="btn btn-default">Add new blog post</button>
   </form>
{{/partial}}

{{> layout.hbs}}